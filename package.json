{
  "name": "next-cms",
  "version": "3.1.0",
  "description": "A complete WordPress-like CMS built with Next.js, Tailwind CSS, and MongoDB",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:clean": "powershell -Command \"taskkill /F /IM node.exe 2>$null; if (Test-Path .next) { Remove-Item -Recurse -Force .next }; if (Test-Path node_modules\\.cache) { Remove-Item -Recurse -Force node_modules\\.cache }\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:init": "npx ts-node --project tsconfig.node.json scripts/init-mongodb.ts",
    "db:init:clear": "npx ts-node --project tsconfig.node.json scripts/init-mongodb.ts --clear",
    "test:api": "node tests/api/test-superadmin-mongo.js"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.14.2",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "dotenv": "^16.3.1",
    "formidable": "^3.5.1",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "next": "^14.0.4",
    "next-auth": "^4.24.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.49.2",
    "react-hot-toast": "^2.4.1",
    "react-simple-wysiwyg": "^3.4.1",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/dotenv": "^8.2.0",
    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/sharp": "^0.32.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
